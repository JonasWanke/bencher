---
import DocsLayout from "../../../layouts/docs/DocsLayout.astro";
import { Collection } from "../../../content/config";
import { getEnPaths } from "../../../i18n/utils";
import { AlsoInEn } from "../../../i18n/AlsoIn";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  return await getEnPaths(Collection.how_to);
}
// 2. When it's time to render, you can get the entry directly from the prop
const { slug } = Astro.params;
const page = Astro.props;
const { Content } = await page.render();
---

<DocsLayout
  title={page.data.title}
  description={page.data.description}
  heading={page.data.heading}
>
  <Content />
  <AlsoInEn path={`how-to/${slug}/`}/>
</DocsLayout>
